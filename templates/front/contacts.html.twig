{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="container">
            <div class="breadcrumb">
                <a href="/home">Home</a>
                <span>Contact</span>
            </div>
        </div>

        <div class="fullwidth-block">
            <div class="container">
                <div class="col-md-5">
                    <div class="contact-details">
                        <div class="map" data-latitude="-6.897789" data-longitude="107.621735"></div>
                        <div class="contact-info">
                            <address>
                                <img src="src/images/icon-marker.png" alt="">
                                <p>Company Name INC. <br>
                                    2803 Avenue Street, Los Angeles</p>
                            </address>

                            <a href="#"><img src="src/images/icon-phone.png" alt="">+1 800 314 235</a>
                            <a href="#"><img src="src/images/icon-envelope.png" alt="">contact@companyname.com</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-md-offset-1">
                    <h2 class="section-title">Contact us</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Commodi consectetur inventore ducimus, facilis, numquam id soluta omnis eius recusandae nesciunt vero repellat harum cum. Nisi facilis odit hic, ipsum sed!</p>
                    {{form_start(form,{'attr':{'class':'contact-form'}})}}
                        <div class="row">
                            <div class="col-md-6">{{form_widget(form.username,{'attr':{'placeholder':'Enter your name...'}})}}</div>
                            <div class="col-md-6">{{form_widget(form.email,{'attr':{'placeholder':'Enter your email...'}})}}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{form_widget(form.companyName,{'attr':{'placeholder':'Enter your Company name...'}})}}</div>
                            <div class="col-md-6">{{form_widget(form.website,{'attr':{'placeholder':'Enter your website...'}})}}</div>
                        </div>
                        {{form_widget(form.message,{'attr':{'placeholder':'Enter message...'}})}}
                        <div class="text-right">
                            <input type="submit" class="submit" value="submit" placeholder="Send message">
                        </div>
                    {{form_end(form)}}

                </div>
            </div>
        </div>

    </main>
{% endblock %}