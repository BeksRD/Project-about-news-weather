<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">
        <title>{% block title %}Compass Starter by Ariona, Rian{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="http://fonts.googleapis.com/css?family=Roboto:300,400,700|" rel="stylesheet" type="text/css">
            <link href="/src/fonts/font-awesome.min.css" rel="stylesheet" type="text/css">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link rel="stylesheet" href="/src/style.css">
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            <script src="/src/js/ie-support/html5.js"></script>
            <script src="/src/js/ie-support/respond.js"></script>
            <script src="/src/js/jquery-1.11.1.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <script src="/src/js/app.js"></script>
            <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    
    <div class="site-content">
        <div class="site-header">
            <div class="container">
                <a href="/home" class="branding">
                    <img src="/uploads/images/logo.png" alt="" class="logo">
                    <div class="logo-type">
                        <h1 class="site-title">Company name</h1>
                        <small class="site-description">tagline goes here</small>
                    </div>
                </a>

                <!-- Default snippet for navigation -->
                <div class="main-navigation">
                    <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        <li class="menu-item"><a href="/home">Home</a></li>
                        <li class="menu-item "><a href="/news">News</a></li>
                        <li class="menu-item"><a href="/life/camera">Live cameras</a></li>
                        <li class="menu-item"><a href="/photos">Photos</a></li>
                        <li class="menu-item"><a href="/contacts">Contact</a></li>
                    </ul> <!-- .menu -->
                </div> <!-- .main-navigation -->

                <div class="mobile-navigation"></div>
            </div>
        </div>
        <pre>
            <div id="liveAlertPlaceholder"></div>
        </pre>
        {% block body %}{% endblock %}
        {{ render(controller('App\\Controller\\BaseController\\Footer::show')) }}
    </div>
    </body>
</html>
